@model TeamInfo
@{
    ViewData["Title"] = "Home Page";
}
@section scripts {
    <script type="text/javascript" src="~/js/Index.js"></script>
}

@section AdditionalStyles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}



<div class="text-center">
    <h1 class="display-4">Our Team</h1>
    <ul id="teamList">
        @for (var i = 0; i < Model.TeamMembers.Count; i++)
        {
            var member = Model.TeamMembers[i].Name;

            <li class="member" member-id =@Model.TeamMembers[i].ID>
                <span class="name">@member</span>
                <span>
                    <i class="pencil fa fa-pencil" aria-hidden="true"></i>
                </span>

                <span>
                    <i class="delete fa fa-times" onclick=deleteMember(@Model.TeamMembers[i].ID) aria-hidden="true"></i>
                </span>
            </li>
        }
    </ul>
    <input type="text" id="nameField" title="e.g. Radu" />
    <button class="btn-primary" id="createButton" disabled=true title="Create">Create</button>
    <button class="btn-primary" id="clearButton" title="Clear">Clear</button>

    @section ModalWindow {
        <!-- Modal -->
        <div class="modal fade" id="editClassmate" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Classmate</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            Name
                            <input id="classmateName" title="Name" type="text">
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button id="submit" type="button" class="btn" data-dismiss="modal">Submit</button>
                        <button id="cancel" type="button" class="btn" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    }
</div>
